/* 卡片顶部状态栏 */
.card-bar {
    background-color: lightcoral;
    display: flex;
    flex-direction: row;
    width: 100%;
    min-height: 100rpx;
}

.card-bar-left {
    /* padding-top: 40rpx; */
    padding-left: 20rpx;
    width: 50%;
    text-align: left;
    font-size: 40rpx;
    color: black;
    background-color: lightgreen;
}

.card-bar-right {
    /* padding-top: 40rpx; */
    padding-right: 20rpx;
    width: 50%;
    text-align: right;
    font-size: 30rpx;
    color: #c8c8c8;
    background-color:blueviolet;
}

/* 卡片信息 */
.card-info {
    text-align: center;
    margin: 25rpx;
    line-height: 1;
    color: #342158;
    background-color: hotpink;
}
  
.card-title {
    font-size: 50rpx;
    margin-bottom: 10rpx;
    font-weight: bold;
}
  
.card-title.text-small {
    font-size: 38rpx;
}
  
.card-type {
    font-size: 25rpx;
    color: rgba(52, 33, 88, 0.7);
}

/* 卡片详情按钮 */
.card-detail {
    box-sizing: border-box;
    color: #342158;
    display: block;
    width: 350rpx;
    height: 80rpx;
    font-size: 35rpx;
    line-height: 76rpx;
    text-align: center;
    border-radius: 40rpx;
    border: 2rpx solid #342158;
    background-color: lawngreen;
}
