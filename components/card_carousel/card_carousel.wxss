/* 卡片轮播 */
.card-list-wrapper {
    width: 100%;
    /* height: 40vh; */
    height: 80%;
}


.card-list{
    position: fixed;
    left: 0;
    margin-top: 20rpx;
    padding: 20rpx 100rpx;
    color: #999;
    height: 40vh;
    width: calc(550rpx*15);
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
    transition: transform 0.5s ease;
}
  
.nav-item {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 550rpx;
    height: 40vh;
    /* background-color: #ffffff; */
    background-color: brown;
    border-radius: 45rpx;
    box-shadow: 3rpx 3rpx 15rpx 3rpx rgba(0, 0, 0, 0.1);
    transition: all 0.5s;
    position: relative;
    z-index: 1;
    transform: scale(0.6) translateY(-2rem);
    word-break: break-all;
}

.active {
    transform: scale(1) translateY(0) translateX(0);
    opacity: 1;
}
  
.next, .prev {
    transform: scale(0.8) translateY(-1rem) translateX(0);
    opacity: 0.6;
}
  
.nav-item:first-child {
    margin-left: 0;
    padding-left: 0;
}
  
.nav-item:last-child {
    margin-right: 0;
    padding-right: 0;
}
  
