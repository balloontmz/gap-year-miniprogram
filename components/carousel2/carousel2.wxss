/* components/carousel2/carousel2.wxss */
.swiper_container {
    height: 700rpx;
    width: 100vw;
    background-color: white;
    /* margin-top: 20rpx; */
  }
   
  .swiper_item {
    font-size: 25rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 2px;
  }

  /* 来自 1 */
  .swiper {
    height: 700rpx;
    width: 100%;
  }
  /* .swiper image {
    height: 100%;
    width: 100%;
  } */
  
  .slide-image {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    filter: blur(20px);
    z-index: -1;
  }
  
  .center-image {
    width: 100%;
    height: 100%;
    display:flex;
    justify-content: center;       
    align-items:flex-end;  
  }
  
  .center-item {
    margin-bottom: 100rpx;
  }
  
  .center-item-title {
    height: 30rpx;
    margin: 5px;
    font-size: 30rpx;
  }
  
  /* .center-image-container {
    border-radius: 10rpx;
    background-color: #f6f6f6;
    margin-bottom: 100rpx;
  } */
  
  .center-image image { 
    width:80vw;
    height:350rpx;
    border-radius: 20rpx;
    background-color: #f6f6f6;
    
  }
  
  .swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
    margin-bottom: 2rpx;
  }
  .swiper .wx-swiper-dot{
   width:40rpx;
   display: inline-flex;
   height: 10rpx;
   margin-left: 20rpx;
   justify-content:space-between;
  }
  .swiper .wx-swiper-dot::before{
   content: '';
   flex-grow: 1; 
   background: rgba(255,255,255,0.8);
   border-radius: 8rpx
  }
  .swiper .wx-swiper-dot-active::before{
   background:rgba(244,0,0,0.8);   
  }
  
  /* 自定义指示点 */
  /*用来包裹所有的小圆点  */
  .dots {
    width: 180rpx;
    height: 20rpx;
    position: absolute;
    display: flex;
    justify-content: center;
    left: 50%;
    transform: translateX(-50%);
    top: 620rpx;
    /* bottom: 200rpx; */
    /* z-index: 1; */
  }
  
  /*未选中时的小圆点样式 */
  .dot {
    width: 10rpx;
    height: 10rpx;
    border-radius: 14rpx;
    margin-right: 26rpx;
    background-color: #de8a78;
  }
  /*选中以后的小圆点样式  */
   
  .active {
    width: 30rpx;
    height: 10rpx;
    background-color: #fc4308;
  }
  
  .test {
    background-color: red;
    height: 100%;
  }