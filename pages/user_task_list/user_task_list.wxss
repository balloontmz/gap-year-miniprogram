/* pages/user_task_list/user_task_list.wxss */

.task-list-page {
    background-color: #F7CAC7;
}

.task-list-container {
    padding-bottom: 30rpx;
    /* height: 50vh; */
}

/* 单个任务 */
.task-item {
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;

    background-color: #ffffff;
    border-bottom: 5rpx solid #DBDBDB;
    margin: 30rpx;
}

/* 单个任务--更多 */
.task-item-more {
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;

    background-color: #ffffff;
    border-bottom: 5rpx solid #DBDBDB;
    margin: 30rpx;
}

.task-base-card {
    height: 100rpx;
}

.task-more-card {
    background-color: grey;
    height: 80rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    display: flex;
    flex-direction: row;
}

.task-more-card > .btn {
    flex: 1 1 0;
    background-color: transparent;
    display: flex;
    align-items: center;     /* 垂直居中 */
    justify-content: center; /* 水平居中 */
}

.task-more-card > .left-button {
    border-right: 3rpx solid red;
}

.task-more-card > .right-button {
    border-left: 3rpx solid red;
}

/* 卡片头部 */
.card-header {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    background-color: greenyellow;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.header-avatar-wrapper {
    flex: 0 0 0;
    background-color: khaki;
}

.header-avatar {
    height: 40px;    
    width: 40px;    
    border-radius: 20px;
    background-color: grey;
    margin: 10rpx;
}

.header-center-wrapper {
    flex: 1 1 0;
    background-color: gold;
}

.header-center {
    display: flex;
    flex-direction: column;
    width: 80vw - 50rpx;
}

.header-title {
    
}
.header-time {

}

.header-end-wrapper {
    flex: 0 0 0 ;
    background-color: beige;
}

