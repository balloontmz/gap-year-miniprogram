/* pages/todo/todo.wxss */
.index-container {
    /* padding: 20rpx; */
    display:flex;
    flex-direction: column;
    /* background-color: #C14242; */
}

.list-view {
    height: 100vh;
    width: 100%;
}

/* 文本区域 */
.text-container {
    padding-top: 20vh;
    background-color: transparent;
    color: #ffffff;
}

.text-area {
    width: 80%;
    height: 20vh;
    margin-left: 10vw;
    /* background-color: wheat; */
}

.text-title {
    font-size: 60rpx;
    text-align: center;
}
/* ///////////// */

.task-list-container {
    /* background-color: green; */
    /* 剩余的视口高度 */
    height: 60vh; 
}

/* 底部按钮 */
.bottom-button-wrapper {
    height: 20%;
    width: 80vw;
    /* background-color: thistle; */
    margin:0 auto;
}

.bottom-button-area {
    height: 100rpx;
    /* background-color: teal; */
    display: flex;
}
.bottom-button-area > .left {
    flex: 1 1 0;
    /* background-color: yellow; */
    display: flex;
    justify-content: center;
    align-items: center;
}
.bottom-button-area > .right {
    flex: 1 1 0;
    /* background-color: yellowgreen; */
    display: flex;
    align-items: center;
    justify-content: center;
}

.task-button {
    background-color: rgba(255, 255, 255, 0.2);
    color: #ffffff;
    width: 30vw;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
}